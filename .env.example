# Habit Monitor CLI Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# ROBOFLOW CONFIGURATION
# ============================================================================
ROBOFLOW_API_KEY=your-api-key-here
WORKFLOW_SERVER_URL=http://localhost:9001/infer/workflows/
WORKFLOW_ID=better-riaz-flow

# ============================================================================
# DETECTION SETTINGS
# ============================================================================
# Confidence threshold for habit detection (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.5
# Seconds between inference calls (lower = more frequent)
INFERENCE_INTERVAL=1.0

# ============================================================================
# CAMERA SETTINGS
# ============================================================================
# Default camera index (0 for built-in webcam)
CAMERA_INDEX=0
# Camera resolution
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
# Camera frames per second
CAMERA_FPS=15

# ============================================================================
# AUDIO SETTINGS
# ============================================================================
# Enable/disable audio warnings (true/false)
ENABLE_AUDIO_WARNINGS=true
# Seconds to wait between audio warnings
AUDIO_WARNING_COOLDOWN=5

# ============================================================================
# DISPLAY SETTINGS
# ============================================================================
# Seconds between display updates
REFRESH_RATE=1.0
# Show webcam window (true/false) - useful for debugging
SHOW_WEBCAM_FEED=false

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Save logs to file (true/false)
LOG_TO_FILE=true
# Log file path
LOG_FILE=logs/habit_monitor.log

# ============================================================================
# DATA STORAGE
# ============================================================================
# Save session statistics to file (true/false)
SAVE_STATISTICS=true
# Statistics file path
STATISTICS_FILE=logs/habit_statistics.json 