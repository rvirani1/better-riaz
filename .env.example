# Habit Monitor CLI Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# ROBOFLOW CONFIGURATION
# ============================================================================
ROBOFLOW_API_KEY=your-api-key-here
WORKSPACE_NAME=dreamsncodes
WORKFLOW_ID=better-riaz-flow

# ============================================================================
# DETECTION SETTINGS
# ============================================================================
# Confidence threshold for habit detection (0.0 - 1.0)
CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# CAMERA SETTINGS
# ============================================================================
# Camera frames per second
CAMERA_FPS=15

# ============================================================================
# AUDIO SETTINGS
# ============================================================================
# Seconds to wait between audio warnings
AUDIO_WARNING_COOLDOWN=5

# ============================================================================
# DISPLAY SETTINGS
# ============================================================================
# Seconds between display updates
REFRESH_RATE=0.25

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO